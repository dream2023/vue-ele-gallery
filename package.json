{
  "name": "vue-ele-gallery",
  "description": "利用 element ui 组件库构成的画廊组件",
  "version": "2.1.6",
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build:lib": "vue build -t lib --name vue-ele-gallery -d ./dist/ ./lib/index.js",
    "build": "npm run lint & npm run build:lib",
    "lint": "vue-cli-service lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dream2023/vue-ele-gallery"
  },
  "main": "lib/index.js",
  "homepage": "https://github.com/dream2023/vue-ele-gallery/",
  "keywords": [
    "vue-ele-gallery",
    "vue",
    "element",
    "element gallery",
    "gallery"
  ],
  "dependencies": {},
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.7.0",
    "@vue/cli-plugin-eslint": "^3.7.0",
    "@vue/cli-service": "^3.7.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "core-js": "^2.6.5",
    "element-ui": "^2.13.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.5",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.5.21"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
